<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/firstTextviewid"
        android:layout_width="match_parent"
        android:background="@color/teal_200"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="25dp"
        android:gravity="right"

        />
    <TextView
        android:id="@+id/secondTextviewid"
        android:layout_width="match_parent"
        android:background="#7A8A89"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="35dp"
        android:text="0"
        android:gravity="right"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:id="@+id/navigationbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+/-"
            android:onClick="logicFunction"
            android:textSize="35dp"/>
        <Button
            android:onClick="ClearFunctionT2"
            android:id="@+id/CEbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="CE"
            android:textSize="35dp"/>
        <Button
            android:onClick="ClearFunction"
            android:id="@+id/Cbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/deletebuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="D"
            android:onClick="deletefunction"
            android:textSize="35dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:onClick="digitfunction"
            android:id="@+id/sevenbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="35dp"
            tools:ignore="OnClick" />
        <Button
            android:onClick="digitfunction"
            android:id="@+id/eightbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/ninebuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/multibuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="*"
            android:onClick="logicFunction"
            android:textSize="35dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:onClick="digitfunction"
            android:id="@+id/fourbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/fivebuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/sixbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/subbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            android:onClick="logicFunction"
            android:textSize="35dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:onClick="digitfunction"
            android:id="@+id/onebuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/twobuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/threebuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="35dp"/>
        <Button
            android:id="@+id/sumbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:onClick="logicFunction"
            android:textSize="35dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
        <Button
            android:onClick="digitfunction"
            android:id="@+id/zerobuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="35dp"/>
        <Button
            android:onClick="digitfunction"
            android:id="@+id/pointbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="35dp"/>
        <Button
            android:id="@+id/equalbuttonid"
            android:onClick="ResultFunction"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="35dp"/>
        <Button
            android:id="@+id/divbuttonid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="/"
            android:onClick="logicFunction"
            android:textSize="35dp"/>


    </LinearLayout>
</LinearLayout>
